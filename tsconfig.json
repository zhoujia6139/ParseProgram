{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "outDir": "build",
    "lib": ["es6", "es7", "dom"],
    "baseUrl": "src",
    "paths": {
      "@actions/*": ["./app/actions/*"],
      "@components/*": ["./app/components/*"],
      "@constants/*": ["./app/constants/*"],
      "@containers/*": ["./app/containers/*"],
      "@utils/*": ["./app/utils/*"],
      "@styles/*": ["./app/styles/*"],
      "@testUtils/*": ["../test/utils/*"]
    },
  },
  "exclude": ["build", "node_modules", "templates", "backend"]
}
